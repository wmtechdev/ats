rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role from users collection
    // Note: Storage rules access Firestore using (default) as the database name
    // Use firestore.get() and firestore.exists() for cross-service access
    function getUserRole() {
      return isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/users/$(request.auth.uid))
        ? firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role
        : null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is the candidate
    function isCandidate(candidateId) {
      return isAuthenticated() && request.auth.uid == candidateId;
    }
    
    // Documents storage path: documents/{candidateId}/{fileName}
    match /documents/{candidateId}/{fileName} {
      // Candidates can read, write, and delete their own documents
      allow read, write, delete: if isAuthenticated() && isCandidate(candidateId);
      
      // Admins can read all documents
      allow read: if isAuthenticated() && isAdmin();
      
      // Admins can write (upload) documents on behalf of candidates
      allow write: if isAuthenticated() && isAdmin();
      
      // Admins can delete documents (for moderation)
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

