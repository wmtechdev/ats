rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get current user ID
    function getUserId() {
      return request.auth.uid;
    }
    
    // Helper function to get user role from existing document
    // Returns null if document doesn't exist or user is not authenticated
    function getUserRole() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(getUserId())) 
        ? get(/databases/$(database)/documents/users/$(getUserId())).data.role 
        : null;
    }
    
    // Helper function to check if user is admin
    // Note: This requires the user document to exist and be readable
    // Use with caution to avoid circular dependencies
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is candidate
    // Note: This requires the user document to exist
    function isCandidate() {
      return isAuthenticated() && getUserRole() == 'candidate';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && getUserId() == userId;
    }
    
    // Users Collection
    match /users/{userId} {
      // Users can ALWAYS read their own user document
      // This is the primary rule and must work independently
      allow read: if isAuthenticated() && getUserId() == userId;
      
      // Admins can read all users (including other users' documents)
      // This is checked separately to avoid circular dependency
      // Only applies when reading OTHER users' documents
      allow read: if isAuthenticated() && 
                     getUserId() != userId && 
                     exists(/databases/$(database)/documents/users/$(getUserId())) &&
                     get(/databases/$(database)/documents/users/$(getUserId())).data.role == 'admin';
      
      // Users can create their own user document during signup
      allow create: if isAuthenticated() && 
                       getUserId() == userId &&
                       request.resource.data.keys().hasAll(['email', 'role', 'createdAt']) &&
                       request.resource.data.role in ['admin', 'candidate'];
      
      // Users can update their own user document (but cannot change role)
      allow update: if isAuthenticated() && 
                       getUserId() == userId &&
                       (!('role' in request.resource.data.diff(resource.data).changedKeys()) ||
                        request.resource.data.role == resource.data.role);
    }
    
    // Candidate Profiles Collection
    match /candidateProfiles/{profileId} {
      // Candidates can read their own profile
      allow read: if isAuthenticated() && 
                     resource.data.userId == getUserId();
      
      // Candidates can create their own profile during signup
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == getUserId();
      
      // Candidates can update their own profile
      allow update: if isAuthenticated() && 
                       resource.data.userId == getUserId();
      
      // Admins can read and update all candidate profiles
      allow read, update: if isAdmin();
    }
    
    // Admin Profiles Collection
    match /adminProfiles/{profileId} {
      // Admins can read their own profile
      allow read: if isAuthenticated() && resource.data.userId == getUserId();
      
      // Admins can read all admin profiles (if user document exists and role is admin)
      allow read: if isAdmin();
      
      // During signup: Allow creation if user is creating their own profile
      // The user document should be created first, but we allow this for signup flow
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == getUserId();
      
      // Admins can update their own profile
      allow update: if isAuthenticated() && 
                       resource.data.userId == getUserId();
      
      // Admins can update any admin profile (if user document exists and role is admin)
      allow update: if isAdmin();
    }
    
    // Jobs Collection
    match /jobs/{jobId} {
      // All authenticated users can read jobs
      allow read: if isAuthenticated();
      
      // Only admins can create, update, or delete jobs
      allow create, update, delete: if isAdmin();
    }
    
    // Applications Collection
    match /applications/{applicationId} {
      // Candidates can read their own applications
      allow read: if isAuthenticated() && 
                     resource.data.candidateId == getUserId();
      
      // Candidates can create their own applications
      allow create: if isAuthenticated() && 
                       request.resource.data.candidateId == getUserId() &&
                       request.resource.data.keys().hasAll(['candidateId', 'jobId', 'status', 'appliedAt']);
      
      // Candidates can delete their own applications
      allow delete: if isAuthenticated() && 
                       resource.data.candidateId == getUserId();
      
      // Admins can read, update, and delete all applications
      allow read, update, delete: if isAdmin();
    }
    
    // Document Types Collection
    match /documentTypes/{docTypeId} {
      // All authenticated users can read document types
      allow read: if isAuthenticated();
      
      // Only admins can create, update, or delete document types
      allow create, update, delete: if isAdmin();
    }
    
    // Candidate Documents Collection
    match /candidateDocuments/{docId} {
      // Candidates can read their own documents
      allow read: if isAuthenticated() && 
                     resource.data.candidateId == getUserId();
      
      // Candidates can create their own documents
      allow create: if isAuthenticated() && 
                       request.resource.data.candidateId == getUserId() &&
                       request.resource.data.keys().hasAll(['candidateId', 'docTypeId', 'documentName', 'storageUrl', 'status', 'uploadedAt']);
      
      // Candidates can update their own documents (limited - can't change status after admin review)
      allow update: if isAuthenticated() && 
                       resource.data.candidateId == getUserId() &&
                       !('status' in request.resource.data.diff(resource.data).changedKeys()) ||
                       resource.data.status == 'pending';
      
      // Candidates can delete their own documents
      allow delete: if isAuthenticated() && 
                       resource.data.candidateId == getUserId();
      
      // Admins can read, create, update, and delete all candidate documents
      allow read, create, update, delete: if isAdmin();
    }
  }
}

